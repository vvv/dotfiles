#!/usr/bin/env python
from __future__ import print_function

import errno
import os
import sys


def usage():
    print('Usage: {} ERRNO'.format(os.path.basename(sys.argv[0])),
          file=sys.stderr)
    sys.exit(1)


if __name__ == '__main__':
    if len(sys.argv) != 2:
        usage()
    try:
        err = int(sys.argv[1])
        print('{} ({}): {}'.format(errno.errorcode[err], err,
                                   os.strerror(err)))
    except ValueError:
        usage()
    except KeyError:
        print('Unknown error code', file=sys.stderr)
