[user]
	name = Valery V. Vorotyntsev
	email = valery.vv@gmail.com
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[alias]
	ap = add -p
	D1 = branch -D @{-1}
	cam = commit --amend
	camH = commit --amend -C HEAD
	ci = commit
	co = checkout
	fe = fetch -p
	fea = fetch -p --all
	fem = fetch -p origin master:master
	g = grep -nHE
	log1 = log --oneline
	me = merge --ff-only @{upstream}
	rfm = push origin HEAD:refs/for/master
	rp = rev-parse --short
	sb = show-branch
	sbo = show-branch HEAD origin/master
	sbu = show-branch HEAD @{upstream}
	st = status -sb
	author = log -1 --pretty='%an <%ae>' --author
	wt = worktree
	cb = !sh -c 'git checkout -b {,origin/}$1' -
[rerere]
	enabled = true
[rebase]
	autoSquash = true
# Let us give `git log --follow` thing a try.
# I never used it, but read good things about it
# [https://twitter.com/mwotton/status/945049811010703360].
[log]
	follow = true
