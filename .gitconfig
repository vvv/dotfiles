	name = Valery V. Vorotyntsev
	email = valery.vv@gmail.com
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[alias]
	D1 = branch -D @{-1}
	cam = commit --amend
	camH = commit --amend -C HEAD
	fe = fetch -p
	fea = fetch -p --all
	fem = fetch -p origin master:master
	g = grep -nHE
	log1 = log --oneline
	rfm = push origin HEAD:refs/for/master
	rp = rev-parse --short
	sb = show-branch
	sbo = show-branch origin/master HEAD
	st = status -sb
	author = log -1 --pretty='%an <%ae>' --author
[rerere]
	enabled = true
[rebase]
	autoSquash = true
